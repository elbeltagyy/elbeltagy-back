<html lang="ar" dir="rtl">

<head>
  <meta charset="UTF-8">
  <style>
    * {
      padding: 0;
      margin: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Amiri', serif;
      text-align: right;
      margin: 20px;

    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    th,
    td {
      border: 1px solid #ddd;
      padding: 8px;
    }

    th {
      background-color: #f2f2f2;
      color: black;
    }

    .colored-cell {
      background-color: #d0f0c0;
      text-align: center;
    }

    header {
      background-color: lightblue;
      padding: 10px;
    }

    .text-box {
      background-color: white;
      padding: 6px 3px;
      margin-top: 3px;
      width: fit-content;
    }

    .flex-tables {
      display: flex;
      justify-content: center;
      gap: 8px;
    }
  </style>
</head>

<body>
  <header>
    <h1 style="text-align: center;">منصه مستر البلتاجى (mrelbeltagy.com) </h1>
    <p>تقرير الطالب من :
      <%= startDate %>
      الي : <%= endDate %></p>
    <br />
    <hr />
    <h4 class="text-box">اسم الطالب: <%= name %></h4>
    <h6 class="text-box">رقم الطالب : <%= phone %></h6>
    <h6 class="text-box">رقم ولى امر الطالب : <%= familyPhone %></h6>
  </header>
   
  <div class="flex-tables">
    <table>
        <tr>
            <th>الكورس</th>
            <th>تاريخ الاشتراك</th>
            <th>سعر الكورس</th>
        </tr>       
        <% subscriptions.forEach(subscribe => { %>
            <tr>
            <td><%= subscribe.name %></td>
            <td><%= subscribe.createdAt %></td>
            <td><%= subscribe.price %></td>
        </tr>
        <% }) %>
    </table>
    
    <table>
        <tr>
            <th>اسم الاختبار</th>
            <th>تاريخ الاختبار</th>
            <th>درجه الطالب</th>
            <th>درجه الاختبار</th>
        </tr>       
        <% attempts.forEach(attempt => { %>
            <tr>
            <td><%= attempt.name %></td>
            <td><%= attempt.createdAt %></td>
            <td><%= attempt.mark %></td>
            <td><%= attempt.mark %></td>
        </tr>
        <% }) %>
    </table>
